score = 0
answer = input ("What color is tap water? ")
if answer == "clear":
    score = score + 1
    print("Yes!")
else:
    print("Duh it's 'clear'.")
answer = input("what color is a pumpkin? ")
if answer == "orange":
     print("Good.")
     score = score + 1
else:
    print("to bad it's Orange.")
answer = input("how many continents are there? ")
if answer == "7":
     score = score + 1
     print("Good job")
else:
    print("Do you even go to school? ")
print("your score is", score) 